{
    "scripts": {
        "watch": "tailwindcss -i ./public/css/input.css -o ./css/output.css --watch",
        "build": "tailwindcss -i ./css/input.css -o ./css/output.css --minify && npm run copy-flowbite",
        "copy-flowbite": "cp ./node_modules/flowbite/dist/flowbite.min.js ./js/flowbite.min.js"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "eslint": "^9.12.0",
        "globals": "^15.11.0",
        "tailwindcss": "^3.4.13"
    },
    "dependencies": {
        "flowbite": "^2.5.1"
    }
}
